<div id="mainCardDiv" class="card card-body rounded mx-2 mb-2 mt-4  border border-muted ">
    {{!-- <div id="cardBodyDiv" class=""> --}}
        <div>
            <div class="mt-3">
                <p style="display: inline;" class="text-dark">Job Card No: </p>
                <p style="display: inline;float: right; " class="me-0 text-right text-dark"><i class="fa fa-inr"></i>
                    {{_id}} </p>
            </div>


          <div class="mt-3">
                <p style="display: inline;" class="text-dark">Site Name: </p>
                <p style="display: inline;float: right;" class="me-0 text-right text-darkd"><i class="fa fa-inr"></i>
                    {{SiteName}} </p>
            </div>

            <div class="mt-3">
                <p style="display: inline;" class="text-dark">Client Name: </p>
                <p style="display: inline;float: right;" class="me-0 text-right text-dark"><i class="fa fa-inr"></i>
                    {{ClientName}} </p>
            </div>

             <div class="mt-3">
                <p style="display: inline;" class="text-dark">Client Phone: </p>
                <p style="display: inline;float: right;" class="me-0 text-right text-dark"><i class="fa fa-inr"></i>
                    {{ClientPhone}} </p>
            </div>
            <div class="mt-3">
                <p style="display: inline;" class="text-dark">Date: </p>
                <p style="display: inline;float: right;" class="me-0 text-right text-dark"><i class="fa fa-inr"></i>
                    {{Date}} </p>
            </div>
             <div class="mt-3">
                <p style="display: inline;" class="text-dark">Delivery Date: </p>
                <p style="display: inline;float: right;" class="me-0 text-right text-dark"><i class="fa fa-inr"></i>
                    {{DeliveryDate}} </p>
            </div>

        </div>
    {{!-- </div> --}}

</div>



{{!-- <div id="mainCardDiv" class="card card-body rounded mb-2 mt-4  border border-muted "> --}}
    {{!-- <div id="cardBodyDiv" class=""> --}}
        {{!-- <div> --}}

            <table id='itemTable' class="col-md-12 card card-body rounded  table  table-white border-dark table-bordered  ">
                <thead class="">
                    <tr>
                        <th colspan="2"></th>

                        <th colspan='3'>
                            <center>All Size in MM</center>
                        </th>

                        <th colspan='6'>
                            <div align='right' class="p-2">
                            </div>
                        </th>
                    </tr>

                    <tr class="col-md-12" >
                        <th class="col-md-1">SL </th>
                        <th class="col-md-1">Item</th>
                        <th class="col-md-1">Thic<br>kne<br>ss</th>
                        <th class="col-md-1">Wid<br>th</th>
                        <th class="col-md-1">Hei<br>ght</th>
                        <th class="col-md-1">QTY</th>
                        <th class="col-md-1">TOTAL SQ.FT</th>
                        <th class="col-md-1">REMARKS</th>
                        <th class="col-md-1">FINISH</th>
                        <th class="col-md-1">RATE<br>SQFT</th>
                        <th class="col-md-1">Amount</th>                    
                    </tr>

                </thead>
                <tbody id='itemTableBody'>

                    {{#each Items}}

                    <tr>                      
                        <td id="serialNO">{{../../slNOs}}</td>                        
                        <td class="text-dark"> {{this.ItemName}}</td>
                        <td class="text-dark">{{this.Thickness}}</td>
                        <td class="text-dark">{{this.Width}}</td>
                        <td class="text-dark">{{this.Height}}</td>
                        <td class="text-dark">{{this.QTY}}</td>
                        <td class="text-dark">{{this.TotalSQFT}}</td>
                        <td class="text-dark">{{this.Remarks}}</td>
                        <td class="text-dark">{{this.Finish}}</td>
                        <td class="text-dark">{{this.RateSQFT}}</td>
                        <td class="text-dark">{{this.Amount}}</td>

                    </tr>
                    {{/each}}
                    <tr>
                        <th class="ms-1" colspan="6">TOTAL </th>                       
                        <th colspan="1"> </th>
                        <td colspan="3"> </td>
                        <th colspan="1"> {{TotalAmount}} </th>
                    </tr>


                </tbody>

            </table>
            {{/with}}
            {{/with}}

        {{!-- </div> --}}

    {{!-- </div> --}}

{{!-- </div> --}}


