<div class="container-fluid bg-light">
    <nav class=" navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <h1 class="navbar-brand" href="#">
                <i class="bi bi-app"></i>
                Archlan Builders
            </h1>
    </nav>
    <div class="col-md-12">
        <table id='itemTable' class="col-md-12  table table-bordered  table-hover">
            <thead>
                <tr>
                    <th colspan="2"></th>

                    <th colspan='3'>
                        <center>All Size in MM</center>
                    </th>
                    <th colspan='6'>
                       <button onclick="downloadExcel()" type=" button"
                                class="mx-auto btn btn-outline-primary">Download Excel</button>
                            
                    </th>
                </tr>

                <tr>
                    <th class="col-md-1">sl.no</th>
                    <th class="col-md-2">Item</th>
                    <th class="col-md-1">Thickness</th>
                    <th class="col-md-1">Width</th>
                    <th class="col-md-1">Height</th>
                    <th class="col-md-1">QTY</th>
                    <th class="col-md-1">TOTAL SQ.FT</th>
                    <th class="col-md-1">REMARKS</th>
                    <th class="col-md-1">FINISH</th>
                    <th class="col-md-1">RATE-SQFT</th>
                    <th class="col-md-1">Amount</th>
                </tr>

            </thead>
            <tbody id='itemTableBody'>
                {{#each response}}

                <tr>
                    <th id="serialNO"> {{ @index }}</th>
                    <td>{{#each Item}} {{this}} {{/each}}</td>
                    <td>{{Thickness}}</td>
                    <td>{{Width}}</td>
                    <td>{{Height}}</td>
                    <td>{{QTY}}</td>
                    <td>{{TotalSQFT}}</td>
                    <td>{{Remarks}}</td>
                    <td>{{Finish}}</td>
                    <td>{{RateSQFT}}</td>
                    <td>{{Amount}}</td>
                </tr>
                {{/each}}


            </tbody>

        </table>
    </div>

    <div class=" nav justify-content-center">

        <form method="post" action="addItem" class="row g-1 col-md-12 ">

            <div class=" col-md-1">
                <input hidden type="text" class=" form-control" name="Item" placeholder="Item" aria-label="Item">
            </div>
            <div class="col-md-2">
                <input type="text" class=" form-control" required name="Item" placeholder="Item" aria-label="Item">
            </div>
            <div class="col-md-1">
                <input type="number" class=" form-control small" required name="Thickness" placeholder="Thickness"
                    aria-label="Thickness">
            </div>
            <div class="col-md-1">
                <input type="number" class=" form-control" id="widthInput" required name="Width" placeholder="Width"
                    aria-label="Width">
            </div>
            <div class="col-md-1">
                <input type="number" class="form-control" id="heightInput" required name="Height" placeholder="Height"
                    aria-label="Height">
            </div>
            <div class="col-md-1">
                <input type="number" class="form-control" id="qtyInput" required name="QTY" placeholder="Quantity"
                    aria-label="QTY">
            </div>
            <div class="col-md-1">
                <input type="number" class="form-control" id="totalSqftInput" name="TotalSQFT" readonly
                    placeholder="TOTAL SQ.FT" aria-label="TotalSQFT">
            </div>
            <div class="col-md-1">
                <input type="text" class="form-control" required name="Remarks" placeholder="REMARKS"
                    aria-label="Remarks">
            </div>
            <div class="col-md-1">
                <input type="number" class="form-control" required name="Finish" placeholder="FINISH"
                    aria-label="Finish">
            </div>
            <div class="col-md-1">
                <input type="number" id="rateInput" class="form-control" required name="RateSQFT"
                    placeholder="RATE-SQFT" aria-label="RateSQFT">
            </div>
            <div class="col-md-1">
                <input type="number" class="form-control" id="amountInput" name="Amount" readonly placeholder="Amount"
                    aria-label="Amount">
            </div>

            <button type="submit button" class="mx-auto btn btn-outline-primary">Add Item</button>
        </form>
    </div>
</div>